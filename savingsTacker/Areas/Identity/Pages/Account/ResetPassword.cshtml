@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="center" style="display: flex; align-items:center; flex-direction: column">
    <h1>@ViewData["Title"]</h1>
    <h6>Provide new passpord.</h6>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div class="txt_field">
            <input asp-for="Input.Email" autocomplete="username" required placeholder="name@example.com" />
            <label asp-for="Input.Email" ></label>
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div class="txt_field">
            <input asp-for="Input.Password" autocomplete="new-password" required placeholder="Please enter your password." />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div class="txt_field">
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" required placeholder="Please confirm your password." />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword"></span>
        </div>
        <input type="submit" value="reset">
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
