@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="center">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div class="txt_field">
            <input asp-for="Input.Email" type="text" autocomplete="username" required>
            <span asp-validation-for="Input.Email"></span>
            <label asp-for="Input.Email">Email</label>
        </div>
        <div class="txt_field">
            <input asp-for="Input.Password" type="password" autocomplete="current-password" required>
            <span asp-validation-for="Input.Password"></span>
            <label asp-for="Input.Password">Password</label>
        </div>
        <div class="pass">
            <a asp-page="./ForgotPassword">
                Forgot password?
            </a>
        </div>
        <input type="submit" value="login">
        <div class="signup_link">
            Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Signup</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
